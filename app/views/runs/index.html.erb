<h2>This is the runs index page</h2>

<table class="striped bordered">
  <div>
    <div align="right">
    <button type="button">Record new run</button>
  </div>

  <table class="striped bordered">
    <tr>
      <th>Date</th>
      <th>Start Time</th>
      <th>Distance</th>
      <th>Stop Time</th>
      <th>Total Run Time</th>
    </tr>

    <tr>
    <% @runs.each do |run| %>
      <%= link_to run_url(run) do %>
      <td><%= run.start_time %></td>
      <td><%= run.distance %></td>
      <td><%= run.end_time %></td>
      <td></td>
      <% end %>
    <% end %>
    </tr>
  </table>
